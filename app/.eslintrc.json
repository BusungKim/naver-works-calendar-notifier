{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
        {
            "files": ["tests/**/*"],
            "env": {
                "jest": true
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": ["warn"],
        "no-use-before-define": ["off"],
        "import/prefer-default-export": ["warn"],
        "react/prop-types": ["off"],
        "react/jsx-no-bind": ["warn"],
        "max-len": ["off"],
        "import/order": ["off"]
    }
}
